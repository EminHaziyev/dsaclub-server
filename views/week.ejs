<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Week 1: Arrays & Strings - DSA Club</title>
    <link rel="stylesheet" href="/styleweek.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <a href="index.html" class="logo"><img src="./img/peerstack_logo1.png" alt="" style="width: 128px;height: 29px; margin-top: 10px;"></a>
            <nav class="nav">
                <a href="index.html#lessons">Lessons</a>
                <a href="index.html#tasks">Tasks</a>
                <a href="index.html#resources">Resources</a>
                <a href="index.html#about">About</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main">
        <!-- Breadcrumb -->
        <nav class="breadcrumb">
            <a href="index.html">Home</a> / <a href="index.html#lessons">Lessons</a> / <%= data.week_name %>
        </nav>

        <!-- Week Header -->
        <section class="week-header">
            
            <h1><%= data.week_name %></h1>
            <p><%= data.week_description %></p>
        </section>

        <!-- Learning Objectives -->
        

        <!-- Key Concepts -->
        

        <!-- Practice Problems -->
        <section class="section">
            <h2>Practice Problems</h2>
            <p>Complete these problems to master arrays and strings fundamentals:</p>

            <div class="problem-grid">

                <% data.tasks.forEach(task => { %>
                    
                    <div class="problem-card">
                        <div class="problem-header">
                            <div class="problem-title"><%= task.task_name %> </div>
                        </div>
                        
                        <div class="problem-links">
                            <a href="<%= task.task_link %>" target="_blank" class="btn btn-primary">Solve on LeetCode</a>
                            <a href="<%= task.solution_link %>" class="btn btn-secondary">View Solution</a>
                        </div>
                    </div>

                <% }) %>


                
                
            </div>
        </section>

        <!-- Additional Resources -->
        <section class="section">
            <h2>Additional Resources</h2>
            <ul>
                <% data.resources.forEach(resource => { %>
                    <li><a href="<%= resource %>" style="color: #58a6ff;"><%= resource %></a></li>
                <% }) %>
                
            </ul>
        </section>
        
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <p>&copy; 2025 DSA Club. Built with ❤️ for our academy students.</p>
        </div>
    </footer>

    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add click tracking for problem links
        document.querySelectorAll('.problem-card .btn-primary').forEach(button => {
            button.addEventListener('click', function() {
                console.log('Problem clicked:', this.closest('.problem-card').querySelector('.problem-title').textContent);
            });
        });
    </script>
</body>
</html>
