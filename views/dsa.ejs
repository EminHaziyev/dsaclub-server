    <script>
        // Simple smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add some interactivity to task completion
        document.querySelectorAll('.task-item').forEach(item => {
            item.addEventListener('click', function() {
                const statusIcon = this.querySelector('.status-icon');
                if (statusIcon.classList.contains('status-pending')) {
                    statusIcon.classList.remove('status-pending');
                    statusIcon.classList.add('status-completed');
                    statusIcon.textContent = '✓';
                }
            });
        });

        // Simple progress tracking
        function updateProgress() {
            const completed = document.querySelectorAll('.status-completed').length;
            const total = document.querySelectorAll('.status-icon').length;
            console.log(`Progress: ${completed}/${total} tasks completed`);
        }

        // Call progress update on page load
        updateProgress();
    </script>
